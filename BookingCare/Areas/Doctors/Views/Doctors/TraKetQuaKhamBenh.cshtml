@{
    ViewData["Title"] = "Trả kết quả khám bệnh";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/traKetQuaKhamBenh.css" asp-append-version="true" />

<div class="container-tra">
    <h2 class="title">Trả Kết Quả Khám Bệnh</h2>

    <div class="section">
        <label>Chẩn đoán:</label>
        <textarea id="diagnosis" rows="3" placeholder="Nhập kết quả chẩn đoán..."></textarea>
    </div>

    <div class="section">
        <label>Dặn dò bệnh nhân:</label>
        <textarea id="instructions" rows="3" placeholder="Nhập dặn dò bác sĩ..."></textarea>
    </div>

        <div class="section">
            <h3>Thêm thuốc cho bệnh nhân</h3>
            <div class="search-box">
                <input type="text" id="searchMedicine" placeholder="Tìm thuốc...">
                <ul id="suggestionList"></ul>
            </div>

            <div class="medicine-form">
                <input type="text" id="selectedMedicine" placeholder="Tên thuốc" readonly>
                <input type="number" id="dosage" placeholder="Liều lượng">
                <input type="text" id="usage" placeholder="Cách dùng">
                <button id="addMedicineBtn">Thêm</button>
            </div>
        </div>

    <div class="section">
        <h3>Danh sách thuốc đã thêm</h3>
        <table id="medicineTable">
            <thead>
                <tr>
                    <th>Tên thuốc</th>
                    <th>Liều lượng</th>
                    <th>Cách dùng</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>

    <button id="submitBtn" class="submit-btn">Hoàn tất trả kết quả</button>
</div>
<script src="~/js/traKetQuaKhamBenh.js" asp-append-version="true"></script>

