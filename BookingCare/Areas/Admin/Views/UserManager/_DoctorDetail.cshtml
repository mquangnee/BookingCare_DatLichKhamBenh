@model BookingCare.Models.ApplicationUser

<div class="modal-header">
    <h5 class="modal-title">Thông tin bác sĩ</h5>
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>
<div class="modal-body">
    <p><strong>Mã bác sĩ:</strong> @Model.Doctor.Id</p>
    <p><strong>Họ tên:</strong> @Model.FullName</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Số điện thoại:</strong> @Model.PhoneNumber</p>
    <p><strong>Ngày sinh:</strong> @Model.BirthOfDate.ToString("dd/MM/yyyy")</p>
    <p><strong>Giới tính:</strong> @Model.Gender</p>
    <p><strong>Địa chỉ:</strong> @Model.Address</p>
    <p><strong>Bằng cấp:</strong> @Model.Doctor.Degree</p>
    <p><strong>Chuyên khoa:</strong> @Model.Doctor.Specialty.Name</p>
    <p><strong>Số năm kinh nghiệm:</strong> @Model.Doctor.YearsOfExp</p>
    <p><strong>Phòng khám:</strong> @Model.Doctor.Room.Name</p>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
</div>