@{
    Layout = "_Layout";
}
<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Quản lý tài khoản bệnh nhân</h1>
</div>

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Danh sách tài khoản bệnh nhân</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <div id="pageType" data-page="patient"></div>
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Họ và tên</th>
                            <th>Email</th>
                            <th>Số điện thoại</th>
                            <th>Ngày tạo tài khoản</th>
                            <th>Cập nhật lần cuối</th>
                            <th>Trạng thái</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody id="patientTableBody"></tbody>
                </table>

                <!-- Phân trang -->
                <div class="d-flex justify-content-center align-items-center mt-3">
                    <button id="prevPage" class="btn btn-outline-primary btn-sm mr-2">← Trước</button>
                    <span id="pageInfo" class="fw-bold text-primary mx-2"></span>
                    <button id="nextPage" class="btn btn-outline-primary btn-sm ml-2">Sau →</button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Patient Detail Modal -->
<div class="modal fade" id="patientModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div id="modalPatient" class="modal-content"></div>
    </div>
</div>

<!-- Patient Confirm Lock Modal -->
<div class="modal fade" id="confirmLockModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow rounded-3">

            <!-- Header -->
            <div class="modal-header border-0 bg-primary text-white rounded-top-4">
                <h5 class="modal-title fw-semibold">
                    <i class="fa-solid fa-lock"></i> Khóa tài khoản
                </h5>
            </div>

            <!-- Body -->
            <div class="modal-body text-center">
                <input type="hidden" id="lockPatientId" />
                <p class="mb-3">Bạn có chắc chắn muốn khóa tài khoản này không?</p>

                <div class="d-flex justify-content-between">
                    <button class="btn btn-secondary px-4" data-dismiss="modal">
                        <i class="fa-solid fa-xmark"></i> Hủy
                    </button>
                    <button id="confirmLockBtn" class="btn btn-danger px-4">
                        <i class="fa-solid fa-check"></i> Khóa
                    </button>
                </div>
            </div>

        </div>
    </div>
</div>

<!-- Patient Confirm Unlock Modal -->
<div class="modal fade" id="confirmUnlockModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow rounded-3">

            <!-- Header -->
            <div class="modal-header border-0 bg-primary text-white rounded-top-4">
                <h5 class="modal-title fw-semibold">
                    <i class="fa-solid fa-unlock"></i> Mở khóa tài khoản
                </h5>
            </div>

            <!-- Body -->
            <div class="modal-body text-center">
                <input type="hidden" id="unlockPatientId" />
                <p class="mb-3">Bạn có chắc chắn muốn mở khóa tài khoản này không?</p>

                <div class="d-flex justify-content-between">
                    <button class="btn btn-secondary px-4" data-dismiss="modal">
                        <i class="fa-solid fa-xmark"></i> Hủy
                    </button>
                    <button id="confirmUnlockBtn" class="btn btn-danger px-4">
                        <i class="fa-solid fa-check"></i> Mở khóa
                    </button>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/patient_management.js"></script>
    <script src="~/js/search_layout.js"></script>
}