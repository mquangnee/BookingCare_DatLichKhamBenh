@model IEnumerable<BookingCare.Models.ApplicationUser>
@{
    Layout = "_Layout";
}
<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Quản lý tài khoản bác sĩ</h1>
</div>
<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Danh sách tài khoản bác sĩ</h6>
            <a asp-area="Admin" asp-controller="UserManager" asp-action="AddDoctor" class="btn btn-primary btn-sm">
                <i class="fas fa-plus"></i> Thêm tài khoản
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Họ và tên</th>
                            <th>Email</th>
                            <th>Số điện thoại</th>
                            <th>Ngày tạo tài khoản</th>
                            <th>Cập nhật lần cuối</th>
                            <th>Trạng thái</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var doctor in Model)
                        {
                            <tr>
                                <td>@doctor.Doctor.Id</td>
                                <td>@doctor.FullName</td>
                                <td>@doctor.Email</td>
                                <td>@doctor.PhoneNumber</td>
                                <td>@doctor.CreatedAt.ToString("dd/MM/yyyy HH:mm:ss")</td>
                                <td>
                                    @if (doctor.UpdatedAt != null)
                                    {
                                        doctor.UpdatedAt?.ToString("dd/MM/yyyy HH:mm:ss");
                                    }
                                    else
                                    {
                                        <text>Chưa cập nhật</text>
                                    }
                                </td>
                                <td>
                                    @if (doctor.LockoutEnd != null)
                                    {
                                        <span class="text-danger">Bị khóa</span>
                                    }
                                    else
                                    {
                                        <span class="text-success">Hoạt động</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-sm btn-secondary dropdown-toggle" data-toggle="dropdown">
                                            <i class="fa-solid fa-bars"></i>
                                        </button>
                                        <div class="dropdown-menu">
                                            @if (doctor.LockoutEnd != null && doctor.LockoutEnd > DateTimeOffset.Now)
                                            {
                                                <form asp-action="UnlockAccount" method="post" style="display:inline">
                                                    <input type="hidden" name="id" value="@doctor.Id" />
                                                    <button type="submit" class="dropdown-item">Mở khóa</button>
                                                </form>
                                            }
                                            else
                                            {
                                                <form asp-action="LockAccount" method="post" style="display:inline">
                                                    <input type="hidden" name="id" value="@doctor.Id" />
                                                    <button type="submit" class="dropdown-item">Khóa</button>
                                                </form>
                                            }
                                            <button class="dropdown-item view-details" data-id="@doctor.Id">Xem chi tiết</button>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- Doctor Detail Modal -->
<div class="modal fade" id="doctorModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.view-details').click(function() {
                var doctorId = $(this).data('id');
                $.ajax({
                    url: '/Admin/UserManager/DoctorDetails/' + doctorId,
                    type: 'GET',
                    success: function (result) {
                        $('#doctorModal .modal-content').html(result);
                        $('#doctorModal').modal('show');
                    },
                    error: function () {
                        alert('Không tải được thông tin!');
                    }
                });
            });
        });
    </script>
}