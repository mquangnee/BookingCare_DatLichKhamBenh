@model BookingCare.Models.ApplicationUser

<div class="modal-header">
    <h5 class="modal-title">Thông tin bệnh nhân</h5>
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>
<div class="modal-body">
    <p><strong>Mã bệnh nhân:</strong> @Model.Patient.Id</p>
    <p><strong>Họ tên:</strong> @Model.FullName</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Số điện thoại:</strong> @Model.PhoneNumber</p>
    <p><strong>Ngày sinh:</strong> @Model.BirthOfDate.ToString("dd/MM/yyyy")</p>
    <p><strong>Giới tính:</strong> @Model.Gender</p>
    <p><strong>Địa chỉ:</strong> @Model.Address</p>
    <p><strong>Tiền sử bệnh:</strong> @Model.Patient?.MedicalHistory</p>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
</div>