@{
    ViewData["Title"] = "Đăng ký khám bệnh";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-4 text-primary">Đăng ký khám bệnh</h2>

    <form id="bookingForm" class="border rounded-4 p-4 shadow-sm bg-light">
      
        <div class="mb-3">
            <label for="chuyenKhoa" class="form-label fw-bold">Chuyên khoa</label>
            <select id="chuyenKhoa" class="form-select" required>
                <option value="">-- Chọn chuyên khoa --</option>
            </select>
        </div>
        <div class="mb-3">
            <label for="bacSi" class="form-label fw-bold">Bác sĩ</label>
            <select id="bacSi" class="form-select" required disabled>
                <option value="">-- Chọn bác sĩ --</option>
            </select>
        </div>
        <div class="mb-3">
            <label for="ngayKham" class="form-label fw-bold">Ngày khám</label>
            <input type="date" id="ngayKham" class="form-control" required
                   min="@DateTime.Now.ToString("yyyy-MM-dd")" />
        </div>
        <div class="mb-3">
            <label class="form-label fw-bold">Buổi khám</label>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="buoiKham" id="buoiSang" value="Sáng">
                <label class="form-check-label" for="buoiSang">Sáng</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="buoiKham" id="buoiChieu" value="Chiều">
                <label class="form-check-label" for="buoiChieu">Chiều</label>
            </div>
        </div>

        <div class="mb-3" id="khungGioContainer" style="display:none;">
            <label class="form-label fw-bold">Chọn khung giờ</label>
            <select id="khungGio" class="form-select" required>
                <option value="">-- Chọn khung giờ --</option>
            </select>
        </div>
        <div class="mb-3">
            <label for="lyDo" class="form-label fw-bold">Lý do khám</label>
            <textarea id="lyDo" class="form-control" rows="3" placeholder="Nhập lý do khám bệnh..." required></textarea>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-success px-4 py-2">Đặt lịch</button>
        </div>
    </form>
</div>
@section scripts{
    <script src = "~/js/patientbooking.js"></script>
}

