@{
    ViewData["Title"] = "Xem lịch sử đặt";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/historybooking.css" asp-append-version="true" />

<div class="container mt-4">
    <h2 class="mb-4">Danh sách lịch hẹn</h2>

    <div class="mb-3 row align-items-center">
        <div class="col-auto">
            <label for="statusFilter" class="form-label">Lọc theo trạng thái:</label>
        </div>
        <div class="col-auto">
            <select id="statusFilter" class="form-select">
                <option value="All">Tất cả</option>
                <option value="Pending">Đã đặt</option>
                <option value="Confirmed">Đã khám</option>
                <option value="Canceled">Đã hủy</option>
            </select>
        </div>
    </div>

    <table class="table table-hover table-bordered" id="appointmentsTable">
        <thead class="table-primary">
            <tr>
                <th>ID</th>
                <th>Ngày</th>
                <th>Giờ</th>
                <th>Bác sĩ</th>
                <th>Phòng</th>
                <th>Lý do</th>
                <th>Trạng thái</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>

    <div id="emptyMessage" class="alert alert-info d-none">Bạn chưa có lịch hẹn nào.</div>
</div>

<script src="~/js/historybooking.js" asp-append-version="true"></script>
