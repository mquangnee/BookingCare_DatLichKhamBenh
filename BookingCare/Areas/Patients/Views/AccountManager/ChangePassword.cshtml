@{
    ViewData["Title"] = "Đổi mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/change_password.css" asp-append-version="true" />

<div class="change-password-container">
    <div class="form-card">
        <h2 class="step-title">BƯỚC 1: TÀI KHOẢN</h2>
     
        <div class="step step1 active">
            <form id="changePasswordForm">
                <div class="mb-3 text-start">
                    <label>Email</label>
                    <input type="email" id="email" class="form-control" placeholder="Nhập email" required />
                </div>

                <div class="mb-3 text-start">
                    <label>Mật khẩu hiện tại</label>
                    <input type="password" id="oldPassword" class="form-control" placeholder="Nhập mật khẩu hiện tại" required />
                </div>

                <div class="mb-3 text-start">
                    <label>Mật khẩu mới</label>
                    <input type="password" id="newPassword" class="form-control" placeholder="Nhập mật khẩu mới" required />
                </div>

                <div class="mb-3 text-start">
                    <label>Xác nhận mật khẩu mới</label>
                    <input type="password" id="confirmPassword" class="form-control" placeholder="Nhập lại mật khẩu mới" required />
                </div>

                <button type="button" class="btn-primary" id="btnNext">Tiếp tục</button>
            </form>
        </div>

    
        <div class="step step2">
            <h4 class="note">Một mã OTP đã được gửi tới email của bạn</h4>
            <div class="mb-3 text-start">
                <label>Nhập mã OTP</label>
                <input type="text" id="otpCode" class="form-control" placeholder="Nhập mã OTP gồm 6 chữ số" maxlength="6" required />
            </div>
            <button type="button" class="btn-primary" id="btnConfirmOtp">Xác nhận OTP</button>
            <button type="button" class="btn-secondary" id="btnBack">Quay lại</button>
        </div>

   
        <div class="step step3 text-center">
            <h3 class="success-title">🎉 Đổi mật khẩu thành công!</h3>
            <p class="note">Bạn có thể dùng mật khẩu mới để đăng nhập.</p>
        </div>
    </div>
</div>

<script src="./js/change_password.js">
   
</script>
