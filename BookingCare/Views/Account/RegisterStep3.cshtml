@{
    ViewData["Title"] = "Hoàn tất đăng ký - Bước 3";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="bc-box">
        <h2 class="text-center bc-title mb-3">Bước 3: Hoàn tất đăng ký</h2>

        <div id="msg" class="mt-3"></div>

        <!-- Stepper -->
        <div class="d-flex justify-content-between mb-4">
            <div class="step-indicator step-active">1</div>
            <div class="flex-grow-1 border-top mx-2"></div>
            <div class="step-indicator step-active">2</div>
            <div class="flex-grow-1 border-top mx-2"></div>
            <div class="step-indicator step-active">3</div>
        </div>

        <form id="registerStep3Form">

            <div class="mb-3">
                <label for="fullName" class="form-label">Họ tên</label>
                <input id="fullName" class="form-control" placeholder="Họ và tên" />
            </div>

            <div class="mb-3">
                <label for="gender" class="form-label">Giới tính</label>
                <select id="gender" class="form-control">
                    <option value="">-- Chọn giới tính --</option>
                    <option value="Nam">Nam</option>
                    <option value="Nữ">Nữ</option>
                </select>
            </div>

            <div class="mb-3">
                <label for="dateOfBirth" class="form-label">Ngày sinh</label>
                <input id="dateOfBirth" type="date" class="form-control" />
            </div>

            <div class="mb-3">
                <label for="address" class="form-label"></label>
                <input id="address" class="form-control" placeholder="Địa chỉ" />
            </div>

            <div class="mb-3">
                <label for="phoneNumber" class="form-label"></label>
                <input id="phoneNumber" class="form-control" placeholder="Số điện thoại" />
            </div>

            <button type="submit" class="btn btn-booking w-100">Hoàn tất</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
    <script src="~/js/register.js"></script>
}
