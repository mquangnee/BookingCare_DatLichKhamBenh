@{
    ViewData["Title"] = "Đặt lại mật khẩu";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="bc-box">
        <h2 class="text-center bc-title mb-4">Nhập email đăng ký và mật khẩu mới</h2>

        <div id="msg" class="mt-3"></div>

        <form id="forgotPasswordStep1Form">
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input id="email" type="email" class="form-control" placeholder="Nhập email của bạn" required />
            </div>

            <div class="mb-3">
                <label for="newPassword" class="form-label">Mật khẩu mới</label>
                <input id="newPassword" type="password" class="form-control" placeholder="Nhập mật khẩu mới" required />
            </div>

            <div class="mb-3">
                <label for="confirmedNewPassword" class="form-label">Xác nhận mật khẩu mới</label>
                <input id="confirmedNewPassword" type="password" class="form-control" placeholder="Nhập lại mật khẩu mới" required />
            </div>

            <button type="submit" class="btn btn-booking w-100">Tiếp tục</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/forgot-password.js"></script>
}