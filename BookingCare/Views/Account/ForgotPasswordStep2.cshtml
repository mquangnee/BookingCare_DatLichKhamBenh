@{
    ViewData["Title"] = "Đặt lại mật khẩu";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="bc-box">
        <h2 class="text-center bc-title mb-3">Xác nhận OTP</h2>

        <div id="msg" class="mt-3"></div>

        <form id="forgotPasswordStep2Form">
            <div class="mb-3">
                <label for="otp" class="form-label">Mã OTP</label>
                <input id="otp" name="otp" class="form-control" placeholder="Nhập mã OTP" />
            </div>

            <button type="submit" class="btn btn-booking w-100">Xác nhận OTP</button>
        </form>

        <form id="resendOtpForm">
            <button type="submit" class="btn btn-outline-booking w-100">Gửi lại OTP</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/forgot-password.js"></script>
}
