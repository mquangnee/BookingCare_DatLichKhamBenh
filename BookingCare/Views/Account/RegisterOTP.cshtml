@model BookingCare.Models.ViewModel.RegisterViewModel
@{
    ViewData["Title"] = "Register - Step 2";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="bc-box">
        <h2 class="text-center bc-title mb-3">Bước 2: Xác nhận OTP</h2>
        <p class="text-center mb-4">Mã xác thực đã được gửi đến <strong>@ViewBag.Email</strong></p>

        <!-- Stepper -->
        <div class="d-flex justify-content-between mb-4">
            <div class="step-indicator step-active">1</div>
            <div class="flex-grow-1 border-top mx-2"></div>
            <div class="step-indicator step-active">2</div>
            <div class="flex-grow-1 border-top mx-2"></div>
            <div class="step-indicator step-inactive">3</div>
        </div>

        <form asp-controller="Account" asp-action="RegisterOTP" method="post">
            <div class="mb-3">
                <label for="otp" class="form-label">Mã OTP</label>
                <input id="otp" name="otp" class="form-control" placeholder="Nhập mã OTP" required />
            </div>

            <button type="submit" class="btn btn-booking w-100">Xác nhận OTP</button>
        </form>

        <form asp-action="RegisterEmailPassword" method="post" class="mt-3">
            <button type="submit" class="btn btn-outline-booking w-100">Gửi lại OTP</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
